@model ProductViewModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>

            <div class="card-body">

                <h4>Product ID : @Model.Id</h4>
                <h4>Processor : @Model.Processor</h4>
                <h4>Quantity : @Model.Quantity</h4>
                <h4>Ram Slots : @Model.RamSlots</h4>
                <h4>Screen Size : @Model.ScreenSize</h4>
                <h4>Usb Ports : @Model.UsbPorts</h4>

                <div class="form-group row">
                    
                    <div class="col-sm-10">

                        <select asp-for="@Model.BrandId" asp-items="@(Model.BrandList)" class="form-control" disabled>
                            
                        </select>
                        
                    </div>
                </div>

                <div class="form-group row">
                    
                    <div class="col-sm-10">

                        <select asp-for="@Model.ComputerTypeId" asp-items="@(Model.ComputerTypeList)" class="form-control" disabled>
                            
                        </select>
                        
                    </div>
                </div>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary m-1">Back</a>
            
            </div>
        </div>
    </div>
</div>

